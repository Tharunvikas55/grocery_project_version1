<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"
      integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- toaster -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
    />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      $(document).ready(function () {
        $(".toast").toast({
          autohide: false,
        });
      });
    </script>
    <style>
      #quan{
color: tomato;
      }
    </style>

    <!-- toaster -->
  </head>
  <body style="background-color: #e3f2fd">
    <%- include('./partials/nav.ejs')%>
    <%- include('./partials/messages.ejs')%>
    
    
    
    

    
    <br />
     <%if(data.length>0 ) {%>
      
    <div class="m-3 row g-5">
      <div class="container-fluid bg-light p-3 mr-3 card-group">
        <%data.forEach(i=>{ %>
          

        <div
          class="col-md-6 col-lg-4 col-xl-3"
          style="width: 15rem"
          id="<%=i.pcatogory%>"
        >
          <a href="/<%=i._id %>/details" style="text-decoration: none">
            <img src="<%=i.pimage%>" class="card-img-top" alt="..." />
            <div class="card-body">
              <%if(i.quantity<5 && i.quantity!=0){%>
               <center id="quan"> <p>only few left</p></center>
              <% } %>
              <%if(i.quantity==0){%>
                <center id="quan"><p>currently unavailable</p></center>
              <% }%>
              <center><h5 class="card-title"><%=i.pname%></h5></center>
              <center><h6 class="card-title">Rs.<%=i.pprice%></h6></center>
              <p class="card-text"></p>
            </a> 
            
              <center>
                
                  
                  <br />
                  
                  <%if(i.quantity==0){%>
                    
                    <a href="/cart/add/<%=i._id%>" class="btn btn-primary disabled">Add to cart</a>
                  <% } else {%>
                    <a href="/cart/add/<%=i._id%>" class="btn btn-primary ">Add to cart</a>
                  
                  <%}%>
              
              </center>
            </div>
          
        </div>

        <% }) %> <%} else {%>
        <p>There are no products to display...</p>
        <% } %>
      </div>
    </div>
    <%- include("./partials/footer.ejs") %>
  </body>
</html>
