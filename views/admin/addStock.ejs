<html>
  <head>
    <%- include("../partials/head.ejs") %>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <%- include("../partials/adminnav.ejs") %>
    <br />
    <center><h3>Add New Product</h3></center>
    <br />
    <div class="container">
      <form action="/admin/new/product" method="post">
        <div class="input-group mb-3">
          <input
            type="text"
            required
            class="form-control"
            placeholder="Product Name "
            name="pname"
            aria-label="Username"
            aria-describedby="basic-addon1"
            required
          />
        </div>
        <div class="input-group mb-3">
          <input
            type="text"
            required
            class="form-control"
            placeholder="Product Batch "
            name="pbatch"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>

        <div class="input-group mb-3">
          <input
            type="text"
            required
            class="form-control"
            placeholder="Cost Price"
            name="costprice"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>
        <div class="input-group mb-3">
          <input
            type="number"
            class="form-control"
            placeholder="Product Price"
            name="pprice"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>
        <div class="input-group mb-3">
          <textarea
            class="form-control"
            name="pdescription"
            placeholder="Product Description"
            id=""
            cols="60"
            rows="4"
          ></textarea>
        </div>

        <!-- <div class="input-group mb-3">
          <input
            type="file"
            class="form-control"
            placeholder="image url"
            name="pimage"
            aria-label="Username"
            aria-describedby="basic-addon1"
            id="img"
          /><img src="#" id="imgPreview" alt="preview" /> <br />
          <br />
        </div> -->

        <div class="input-group mb-3">
          <input
            type="text"
            accept="image/*"
            class="form-control"
            placeholder="image url"
            name="pimage"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>
        <div class="input-group mb-3">
          <input
            type="text"
            required
            class="form-control"
            placeholder="Brand"
            name="pbrand"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>
        <div class="input-group mb-3">
          <input
            type="text"
            required
            class="form-control"
            placeholder="Supplier"
            name="psupplier"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>

        <!-- <div class="input-group mb-3">
              <input
                type="text"
                required
                class="form-control"
                placeholder="Product Catogory "
                name="pcatogory"
                aria-label="Username"
                aria-describedby="basic-addon1"
              />
            </div> -->
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01"
            >catogory</label
          >

          <br />
          <select class="custom-select" name="pcatogory">
            <% catogories.forEach(function(i){%>
            <option value="<%=i.slug%>"><%=i.title%></option>
            <%});%>
          </select>
          <br />
        </div>
        <br />
        <div class="input-group mb-3">
          <br />
          <input
            type="number"
            class="form-control"
            placeholder="Quantity "
            name="quantity"
            aria-label="Username"
            aria-describedby="basic-addon1"
          />
        </div>
        <br />
        <div class="modal-footer">
          <a href="/admin/products" class="btn btn-primary">Cancel</a>

          <button type="submit" class="btn btn-primary">Add</button>
        </div>
      </form>
    </div>
    <script>
      function readURL(input) {
        if (input.files && input.files[0]) {
          var reader = new FileReader();
          reader.inload = function (e) {
            $("#imgPreview")
              .attr("src", e, target.result)
              .width(100)
              .height(100);
          };
          reader.readAsDataURL(input.files[0]);
        }
      }
      $("#img").change(function () {
        readURL(this);
      });
    </script>
  </body>
</html>
