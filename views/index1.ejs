    }
    .navbar .badge {
      color: #fff;
      background: #f44336;
      font-size: 11px;
      border-radius: 20px;
      position: absolute;
      min-width: 10px;
      padding: 4px 6px 0;
      min-height: 18px;
      top: 5px;
    }
    .navbar a.notifications,
    .navbar a.messages {
      position: relative;
      margin-right: 10px;
    }
    .navbar a.messages {
      margin-right: 20px;
    }
    .navbar a.notifications .badge {
      margin-left: -8px;
    }
    .navbar a.messages .badge {
      margin-left: -4px;
    }
    .navbar .active a,
    .navbar .active a:hover,
    .navbar .active a:focus {
      background: transparent !important;
    }
    @media (min-width: 1200px) {
      .form-inline .input-group {
        width: 300px;
